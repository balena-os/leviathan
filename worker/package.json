{
	"directories": {
		"lib": "lib",
		"bin": "bin",
		"test": "test"
	},
	"scripts": {
		"lint:fix": "balena-lint -e js -e ts --fix bin/ lib/ test/",
		"lint": "balena-lint -u -e js -e ts --tests lib/ bin/ test/ && tsc --noEmit",
		"clean": "rm -rf build",
		"test": "npm run lint:fix && npm run lint && npm run test:cov",
		"build": "npm run clean && tsc",
		"build:test": "npm run clean && tsc --project . && cp -r test/assets/image.zip build/test",
		"start": "node ./build/bin",
		"test:cov": "npm run build:test && nyc mocha",
		"test:fast": "npm run build:test && mocha"
	},
